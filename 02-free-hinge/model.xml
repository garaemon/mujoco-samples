<mujoco>
  <worldbody>
    <light diffuse="1 1 1" pos="0 0 3" dir="0 0 -1"/>
    <body name="box_and_sphere" euler="0 0 -30">
      <joint name="swing" type="hinge" axis="1 -1 0" pos="-.2 -.2 -.2"/>
      <geom name="red_box" type="box" size=".2 .2 .2" rgba="1 0 0 1"/>
    </body>

    <!-- link1 --joint1-- link2 -->
    <!-- Unlike URDF, the hierarchy of XML implicates the joint connection between two bodies. -->
    <body name="link1" pos="1 0 1" euler="0 10 0">
      <geom type="capsule" fromto="0 0 0  0 0 -0.5" size="0.05" rgba="0.8 0.2 0.2 1"/>
      <body name="link2" pos="0 0 -0.5">
        <joint name="joint1" type="hinge" axis="0 1 0"/>
        <geom type="capsule" fromto="0 0 0  0 0 -0.5" size="0.05" rgba="0.2 0.8 0.2 1"/>
      </body>
    </body>
  </worldbody>
</mujoco>
